<Window x:Class="FreePIE.GUI.Shells.MainShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:cal="http://www.caliburnproject.org"
        Title="FreePIE" Background="{DynamicResource WindowBackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ContentControl x:Name="Menu" Grid.Row="0"/>       
        <ContentControl x:Name="ScriptEditor" Grid.Row="1"/>
        <GridSplitter Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="2" />
        <ContentControl x:Name="Output" Margin="0,2,0,0" Grid.Row="2"/>
    </Grid>
</Window>
