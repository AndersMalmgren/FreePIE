<Window x:Class="FreePIE.GUI.Shells.PluginSettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PluginSettingsView" Background="{DynamicResource WindowBackgroundBrush}" SizeToContent="WidthAndHeight"
        Icon="{StaticResource IconSettings}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ItemsControl x:Name="PluginProperties" Padding="5" Grid.Row="0"></ItemsControl>        
        <Button x:Name="Ok" Grid.Row="1">Ok</Button>
    </Grid>
</Window>
